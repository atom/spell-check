# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[*.{ts,coffee}]
quote_type = single

[*.js]
indent_size = 4
tab_width = 4
quote_type = single
